<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <title>Destinations</title>
  <!-- bootstrap.min css -->
  <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  <!-- Main Stylesheet -->
  <link rel="stylesheet" href="/assets/css/new_style.css">
</head>
<body id="top">

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Emirate Travel Guide</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/weather">Weather</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/currency">Currency</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/timezone">Timezone</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/destinations">Destinations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/account">Account</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
  </header>

  <section class="page-title bg-1">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="block text-center">
            <span class="text-white">Recent Posts</span>
            <h1 class="text-capitalize mb-5 text-lg">Travel Destinations</h1>

          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section blog-wrap">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="row">
            <% posts.forEach(post => { %>
            <div class="col-lg-12 col-md-12 mb-5">
              <div class="blog-item">
                <div class="blog-thumb">
                  <% if (post.image) { %>
                    <img src="<%= post.image %>" alt="Post Image" class="img-fluid">
                  <% } else { %>
                    <img src="/images/default.jpg" alt="Default Image" class="img-fluid">
                  <% } %>
                </div>
  
                <div class="blog-item-content">
                  <div class="blog-item-meta mb-3 mt-4">
                    <span class="text-black text-capitalize mr-3"><i class="icofont-calendar mr-1"></i> Posted on <%= post.created_at %></span>
                  </div>
  
                  <h2 class="mt-3 mb-3"><a href="blog-single.html"><%= post.title %></a></h2>
  
                  <p class="mb-4"><%= post.content %></p>

                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="sidebar-wrap pl-lg-4 mt-5 mt-lg-0">
  
            <div class="sidebar-widget latest-post mb-3">
              <h5>Popular Posts</h5>
              <% posts.forEach(post => { %>
              <div class="py-2">
                <span class="text-sm text-muted"><%= post.created_at %></span>
                <h6 class="my-2"><a href="#"><%= post.title %></a></h6>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; 2024 Travel Guide. All rights reserved.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
